doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/css/uikit.min.css')
    link(rel='stylesheet', href='/css/uikit-rtl.min.css')
  body
      nav.uk-navbar-container(uk-navbar='')
          .uk-navbar-left
              ul.uk-navbar-nav
                  li
                      a(href='/') Главная
                  li
                      a(href='/main') Рабочее место
                  if(!auth)
                      li
                          a(href='/signin') Авторизация
                      li
                          a(href='/signup') Регистрация
          .uk-navbar-right
              if(auth)
                  ul.uk-navbar-nav
                      li Привет, #{user_name}
                      a(href='/logout') Выйти


      div.uk-container
        block content

  script(src="/js/uikit.min.js")
  script(src="/js/uikit-icons.min.js")
